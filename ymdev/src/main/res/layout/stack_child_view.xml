<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_app_page"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/title_icon"
            android:layout_width="@dimen/common_icon_height"
            android:layout_height="@dimen/common_icon_height"
            android:layout_marginLeft="@dimen/common_horizontal_margin"
            android:src="@mipmap/ic_launcher_round"/>

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_horizontal_margin"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@color/blue"
        android:id="@+id/stack_view_iv"
        />

</LinearLayout>
